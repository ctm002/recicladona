<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostularActivity">

    <ImageView
        android:id="@+id/img_postular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_titulo_postular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_donar" />

    <TextView
        android:id="@+id/txt_titulo_postular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_postular"
        app:layout_constraintEnd_toEndOf="@+id/img_postular"
        app:layout_constraintStart_toStartOf="@+id/img_postular"
        app:layout_constraintTop_toBottomOf="@+id/img_postular" />

    <Button
        android:id="@+id/btn_postular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="POSTULAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo_postular"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo_postular"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_postular" />
</androidx.constraintlayout.widget.ConstraintLayout>