<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_logo_donativo"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:foreground="@drawable/img_available"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/txt_titulo_donativo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_titulo_donativo"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_logo_donativo"
        app:layout_constraintTop_toTopOf="@+id/img_logo_donativo" />

    <TextView
        android:id="@+id/txt_usuario_donativo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_logo_donativo"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_donativo" />

    <TextView
        android:id="@+id/txt_cantidad_postulantes_donativo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_logo_donativo"
        app:layout_constraintTop_toBottomOf="@+id/txt_usuario_donativo" />

    <TextView
        android:id="@+id/txt_fecha_donativo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_logo_donativo"
        app:layout_constraintTop_toBottomOf="@+id/txt_cantidad_postulantes_donativo" />

</androidx.constraintlayout.widget.ConstraintLayout>